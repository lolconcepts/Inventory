<p id="notice"><%= notice %></p>

<h1>Locations <button type="button" class="btn btn-light"><%= link_to 'New', new_location_path %></button></h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.address %></td>
        <td><%= location.city %></td>
        <td><%= location.state %></td>
        <td><%= location.zip %></td>
        <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, location %></td>
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_location_path(location) %></td>
        <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
