<!DOCTYPE html>
<html>
  <head>
    <title>Inventory Tracker v0.95</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-primary">
  <a class="navbar-brand" href="#">ISG Inventory</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Dashboard', root_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item active">
        <%= link_to 'Inventory', items_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Locations', locations_path, :class => 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Vendors', vendors_path, :class => 'nav-link' %>
      </li>
    </ul>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
