<p id="notice"><%= notice %></p>

<h1>Vendors <button type="button" class="btn btn-light"><%= link_to 'New', new_vendor_path %></button></h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Support Link</th>
      <th>Telephone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.name.upcase %></td>
        <td><%= link_to(vendor.url,vendor.url) %></td>
        <td><%= vendor.telephone %></td>
        <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, vendor %></td>
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_vendor_path(vendor) %></td>
        <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
